" jump between parens
nmap <tab> %
vmap <tab> %

" select pasted text
nnoremap gv `[v`]<Up>$

" redo
nmap U <C-r>

" clear search
nmap <space> :noh<CR>

" jump to any word
nmap j <leader><leader><leader>bdw

" next/prev/endof word
nnoremap W b
nnoremap E ge

" next/prev in camelcase
nmap q <leader>w
nmap Q <leader>b

" marker
nmap , '
omap , '

" split horizontally also with 'h'
nnoremap <C-w>h <C-w>s
